{
  "name": "hardhat-project",
  "scripts": {
    "compile": "TS_NODE_TRANSPILE_ONLY=1 hardhat compile",
    "compile:clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "dev": "hardhat node --watch",
    "format": "prettier --check '**/*.{ts,js,sol}'",
    "format:fix": "prettier --write '**/*.{ts,js,sol}'",
    "gas": "cross-env REPORT_GAS=true HARDHAT_DEPLOY_FIXTURE=true hardhat test test/unit",
    "lint": "eslint '**/*.{js,ts}' && solhint 'contracts/**/*.sol'",
    "lint:fix": "eslint --fix '**/*.{js,ts}' && solhint --fix 'contracts/**/*.sol'",
    "prepare": "husky install",
    "size": "cross-env REPORT_SIZE=true hardhat compile",
    "test": "yarn test:unit",
    "test:unit": "hardhat test test/unit"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.5",
    "hardhat": "^2.9.3",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "eslint-plugin-filenames-simple": "^0.7.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "fs": "^0.0.1-security",
    "fs.promises": "^0.1.2",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-deploy": "^0.11.4",
    "hardhat-docgen": "^1.3.0",
    "husky": "^8.0.1",
    "lint": "^0.7.0",
    "madge": "^5.0.1",
    "merkletreejs": "^0.2.31",
    "mime": "^3.0.0",
    "mime-types": "^2.1.35",
    "nft.storage": "^6.2.0",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
